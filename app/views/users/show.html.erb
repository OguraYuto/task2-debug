<main style="user-select: auto;">
        <p id="notice" style="user-select: auto;"><%= flash[:notice] %></p>
        <div class="container px-5 px-sm-0" style="user-select: auto;">
          <div class="row" style="user-select: auto;">
            <div class="col-md-3" style="user-select: auto;">

<!--ユーザー画面ページのテンプレート使用      -->
<%= render 'users/usertemplete1', user: @user %>
<!--ユーザー画面ページのテンプレート使用

<!--~投稿フォーム部分テンプレート使用〜-->
 <%= render 'books/booktemplete1', book: @book %>
<!--~投稿フォーム部分テンプレート使用〜-->

 <!--~ 投稿内容反映〜-->
    <div class="col-md-8 offset-md-1" style="user-select: auto;">
      <h2 style="user-select: auto;">Books</h2>
      <table class="table table-hover table-inverse" style="user-select: auto;">

  <thead style="user-select: auto;">
    <tr style="user-select: auto;">
      <th style="user-select: auto;"></th>
      <th style="user-select: auto;">Title</th>
      <th style="user-select: auto;">Opinion</th>
      <th colspan="3" style="user-select: auto;"></th>
    </tr>
  </thead>

  <tbody style="user-select: auto;">
     <% @books.each do |book| %>
      <tr style="user-select: auto;">

         <td style="user-select: auto;">
           <div><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image2.jpg" %></div>
        </td>
          <td style="user-select: auto;"><%= link_to book.title,book_path(book.id) %></td>
          <td style="user-select: auto;"><%= book.body %></td>
          <% end %>
        </tr>
  </tbody>
</table>
 <!--~ 投稿内容反映〜-->




     </div>
    </div>
  </div>
 </main>

