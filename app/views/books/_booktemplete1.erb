<%= form_with model: book,url:'/books',local: true do |f| %> <!-- @book → book -->

 <h2 class="mt-3" style="user-select: auto;">New book</h2>

  <div class="form-group" style="user-select: auto;">
    <label for="book_title" style="user-select: auto;">Title</label>
    <div><%= f.text_field :title %></div>
  </div>

  <div class="form-group" style="user-select: auto;">
    <label for="book_opinion" style="user-select: auto;">Opinion</label>
     <div> <%= f.text_area :body %></div>
  </div>

  <div class="form-group" style="user-select: auto;">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" style="user-select: auto;">
  </div>
  <% end %>
  </div>
